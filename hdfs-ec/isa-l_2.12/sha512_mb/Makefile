lib_name   := sha512_mb.a

lsrc += sha512_ctx_sse.c \
	sha512_ctx_avx.c \
	sha512_ctx_avx2.c \
	sha512_ctx_sb_sse4.c

lsrc += sha512_mb_mgr_init_sse.c \
	sha512_mb_mgr_init_avx2.c \
	sha512_sb_mgr_init_sse4.c


lsrc += sha512_mb_mgr_submit_sse.asm \
	sha512_mb_mgr_submit_avx.asm \
	sha512_mb_mgr_submit_avx2.asm \
	sha512_mb_mgr_flush_sse.asm \
	sha512_mb_mgr_flush_avx.asm \
	sha512_mb_mgr_flush_avx2.asm \
	sha512_mb_x2_sse.asm \
	sha512_mb_x2_avx.asm \
	sha512_mb_x4_avx2.asm \
	sha512_multibinary.asm \
	sha512_sb_mgr_submit_sse4.c \
	sha512_sb_mgr_flush_sse4.c \
	sha512_sse4.asm 

extern_hdrs += sha512_mb.h memcpy_inline.h intrinreg.h

other_src += 	datastruct.asm \
		sha512_job.asm \
		sha512_mb_mgr_datastruct.asm \
		reg_sizes.asm \
		sha512_ref.c

unit_tests  +=  sha512_mb_sse_test \
		sha512_mb_sse_rand_test \
		sha512_mb_sse_rand_ssl_test \
		sha512_mb_sse_rand_update_test \
		sha512_mb_sse_error_test \
		sha512_mb_avx_test \
		sha512_mb_avx_rand_test \
		sha512_mb_avx_rand_ssl_test \
		sha512_mb_avx_rand_update_test \
		sha512_mb_avx_error_test \
		sha512_mb_avx2_test \
		sha512_mb_avx2_rand_test \
		sha512_mb_avx2_rand_ssl_test \
		sha512_mb_avx2_rand_update_test \
		sha512_mb_avx2_error_test \
		sha512_mb_test \
		sha512_mb_rand_test \
		sha512_mb_rand_ssl_test \
		sha512_mb_rand_update_test \
		sha512_sb_sse4_test \
		sha512_sb_sse4_rand_ssl_test \
		sha512_sb_sse4_rand_test \
		sha512_sb_sse4_rand_update_test \
		sha512_sb_sse4_error_test

perf_tests  +=  sha512_mb_sse_vs_ossl_perf \
		sha512_mb_avx_vs_ossl_perf \
		sha512_mb_avx2_vs_ossl_perf \
		sha512_mb_vs_ossl_perf \
		sha512_sb_sse4_vs_ossl_perf

-include ../make.inc

VPATH = ../include

sha512_mb_sse_rand_test: sha512_ref.o
sha512_mb_avx_rand_test: sha512_ref.o
sha512_mb_avx2_rand_test: sha512_ref.o
sha512_mb_rand_test: sha512_ref.o
sha512_sb_sse4_rand_test: sha512_ref.o

sha512_mb_sse_error_test: sha512_ref.o
sha512_mb_avx_error_test: sha512_ref.o
sha512_mb_avx2_error_test: sha512_ref.o
sha512_sb_sse4_error_test: sha512_ref.o

sha512_mb_sse_rand_update_test: sha512_ref.o
sha512_mb_avx_rand_update_test: sha512_ref.o
sha512_mb_avx2_rand_update_test: sha512_ref.o
sha512_mb_rand_update_test: sha512_ref.o
sha512_sb_sse4_rand_update_test: sha512_ref.o

sha512_mb_sse_rand_ssl_test: LDLIBS += -lcrypto
sha512_sb_sse4_rand_ssl_test: LDLIBS += -lcrypto
sha512_mb_avx_rand_ssl_test: LDLIBS += -lcrypto
sha512_mb_avx2_rand_ssl_test: LDLIBS += -lcrypto
sha512_mb_rand_ssl_test: LDLIBS += -lcrypto

