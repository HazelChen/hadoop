lib_name   := sha1_mb.a

lsrc += sha1_ctx_sse.c \
	sha1_ctx_avx.c \
	sha1_ctx_avx2.c 

lsrc += sha1_mb_mgr_init_sse.c \
	sha1_mb_mgr_init_avx2.c 

lsrc += sha1_mb_mgr_submit_sse.asm \
	sha1_mb_mgr_submit_avx.asm \
	sha1_mb_mgr_submit_avx2.asm \
	sha1_mb_mgr_flush_sse.asm \
	sha1_mb_mgr_flush_avx.asm \
	sha1_mb_mgr_flush_avx2.asm \
	sha1_mb_x4_sse.asm \
	sha1_mb_x4_avx.asm \
	sha1_mb_x8_avx2.asm \
	sha1_multibinary.asm

extern_hdrs += sha1_mb.h memcpy_inline.h intrinreg.h

other_src += 	datastruct.asm \
		sha1_job.asm \
		sha1_mb_mgr_datastruct.asm \
		reg_sizes.asm \
		sha1_ref.c

unit_tests  += 	sha1_mb_sse_test \
		sha1_mb_sse_rand_test \
		sha1_mb_sse_rand_ssl_test \
		sha1_mb_sse_rand_update_test \
		sha1_mb_sse_error_test \
		sha1_mb_avx_test \
		sha1_mb_avx_rand_test \
		sha1_mb_avx_rand_update_test \
		sha1_mb_avx_rand_ssl_test \
		sha1_mb_avx_error_test \
		sha1_mb_avx2_test \
		sha1_mb_avx2_rand_test \
		sha1_mb_avx2_rand_update_test \
		sha1_mb_avx2_rand_ssl_test \
		sha1_mb_avx2_error_test \
		sha1_mb_test \
		sha1_mb_rand_test \
		sha1_mb_rand_update_test \
		sha1_mb_rand_ssl_test \

perf_tests  += sha1_mb_sse_vs_ossl_perf \
		sha1_mb_avx_vs_ossl_perf \
		sha1_mb_avx2_vs_ossl_perf \
		sha1_mb_vs_ossl_perf 

-include ../make.inc

VPATH = ../include

sha1_mb_sse_rand_test: sha1_ref.o
sha1_mb_avx_rand_test: sha1_ref.o
sha1_mb_avx2_rand_test: sha1_ref.o
sha1_mb_rand_test: sha1_ref.o

sha1_mb_sse_rand_update_test: sha1_ref.o
sha1_mb_avx_rand_update_test: sha1_ref.o
sha1_mb_avx2_rand_update_test: sha1_ref.o
sha1_mb_rand_update_test: sha1_ref.o

sha1_mb_sse_error_test: sha1_ref.o
sha1_mb_avx_error_test: sha1_ref.o
sha1_mb_avx2_error_test: sha1_ref.o

sha1_mb_sse_rand_ssl_test: LDLIBS += -lcrypto
sha1_mb_avx_rand_ssl_test: LDLIBS += -lcrypto
sha1_mb_avx2_rand_ssl_test: LDLIBS += -lcrypto
sha1_mb_rand_ssl_test: LDLIBS += -lcrypto

sha1_mb_sse_vs_ossl_perf: LDLIBS += -lcrypto
sha1_mb_avx_vs_ossl_perf: LDLIBS += -lcrypto
sha1_mb_avx2_vs_ossl_perf: LDLIBS += -lcrypto
sha1_mb_vs_ossl_perf: LDLIBS += -lcrypto
